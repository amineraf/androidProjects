<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.profileapp.arafla.profileapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainFormationActivity"
            android:parentActivityName=".MainActivity"
            >

        </activity>
        <activity
            android:name=".AnomaliesActivity"
            android:label="@string/title_activity_anomalies"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".NouvelleFormation"
            android:label="@string/title_activity_nouvelle_activite"
            android:parentActivityName=".MainFormationActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ResultatRecherche"
            android:label="@string/search_title"
            android:parentActivityName=".MainFormationActivity"
            >
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
            <meta-data
                android:name="android.app.default_searchable"
                android:resource="@xml/searchable" />
        </activity>
    </application>

</manifest>
